{
  "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "lib": ["es2020", "esnext.asynciterable"],
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es2020",
      "types": ["node", "jest"],
      "declaration": true,
      "outDir": "./pkg",
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "experimentalDecorators": true
  },
  "include": ["./src", "./spec"]
}
